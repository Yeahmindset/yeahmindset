    </header>

    <h1>ðŸ§± Breakout $YEAH</h1>
    <p style="opacity:0.9; max-width:500px; margin:0 auto 20px; font-weight:500;">Move paddle | Shatter FUD Chains | Build Conviction ðŸ’ŽðŸ™Œ</p>
    <canvas id="gameCanvas" width="500" height="700"></canvas>
    <div id="ui">Shatters: 0 | Level: 1 | Lives: 3 | High: 0</div>
    <button id="tweetBtn">ðŸ“± Tweet Highscore! @Yeah_mindset ðŸš€</button>

    <script>
        // Navbar Mobile Toggle
        document.getElementById('menuToggle').addEventListener('click', () => {
            document.getElementById('navMenu').classList.toggle('active');
        });

        // Game Code (Improved: New colors, responsive canvas scale, smoother physics, Orbitron UI)
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');
        const ui = document.getElementById('ui');
        const tweetBtn = document.getElementById('tweetBtn');

        // Responsive canvas
        function resizeCanvas() {
            const maxW = Math.min(500, window.innerWidth * 0.95);
            const scale = maxW / 500;
            canvas.style.width = maxW + 'px';
            canvas.style.height = (700 * scale) + 'px';
            canvas.width = 500;
            canvas.height = 700;
            ctx.scale(1,1); // Reset if needed
        }
        window.addEventListener('resize', resizeCanvas);
        resizeCanvas();

        let gameState = 'start';
        let paddle = { x: 200, w: 100, h: 15, speed: 8 };
        let balls = [{ x: 250, y: 500, vx: 4, vy: -4, r: 10 }];
        let bricks = [];
        let powerups = [];
        let score = 0;
        let level = 1;
        let lives = 3;
        let highscore = parseInt(localStorage.getItem('yeahBreakoutHS')) || 0;
        let frame = 0;
        let mouseX = 225;

        function initLevel() {
            bricks = [];
            const rows = 5 + Math.floor(level / 2);
            const cols = 10;
            for (let r = 0; r < rows; r++) {
                for (let c = 0; c < cols; c++) {
                    bricks.push({
                        x: c * 48 + 25,
                        y: r * 25 + 50,
                        w: 45,
                        h: 20,
                        alive: true
                    });
                }
            }
        }

        function initGame() {
            level = 1;
            score = 0;
            lives = 3;
            balls = [{ x: 250, y: 500, vx: 4, vy: -4, r: 10 }];
            paddle.x = 200;
            paddle.w = 100;
            initLevel();
            gameState = 'start';
            tweetBtn.style.display = 'none';
            updateUI();
        }

        function update() {
            if (gameState !== 'play') return;

            // Paddle (smoother follow)
            const targetX = Math.max(paddle.w / 2, Math.min(canvas.width - paddle.w / 2, mouseX));
            paddle.x += (targetX - paddle.x - paddle.w / 2) * 0.25;

            // Balls (improved physics)
            for (let i = balls.length - 1; i >= 0; i--) {
                const ball = balls[i];
                ball.x += ball.vx;
                ball.y += ball.vy;

                // Walls
                if (ball.x - ball.r < 0 || ball.x + ball.r > canvas.width) ball.vx *= -1;
                if (ball.y - ball.r < 0) ball.vy *= -1;
                if (ball.y + ball.r > canvas.height) {
                    balls.splice(i, 1);
                    if (balls.length === 0) {
                        lives--;
                        if (lives <= 0) gameOver();
                        else balls = [{ x: 250, y: 500, vx: 4 * (0.8 + level*0.05), vy: -4, r: 10 }];
                    }
                    continue;
                }

                // Paddle hit (angle based on hit position)
                if (ball.y + ball.r > canvas.height - paddle.h - 10 &&
                    ball.x > paddle.x && ball.x < paddle.x + paddle.w) {
                    ball.vy *= -1.05;
                    const hitPos = (ball.x - (paddle.x + paddle.w / 2)) / (paddle.w / 2);
                    ball.vx += hitPos * 2;
                }

                // Bricks
                for (let j = bricks.length - 1; j >= 0; j--) {
                    const brick = bricks[j];
                    if (brick.alive && 
                        ball.x + ball.r > brick.x && ball.x - ball.r < brick.x + brick.w &&
                        ball.y + ball.r > brick.y && ball.y - ball.r < brick.y + brick.h) {
                        brick.alive = false;
                        score += 10 * level;
                        ball.vy *= -1;
                        if (Math.random() < 0.25) { // More powerups
                            powerups.push({ 
                                x: brick.x + brick.w/2, 
                                y: brick.y + brick.h/2, 
                                vy: 2, 
                                type: Math.floor(Math.random()*3) 
                            });
                        }
                        break;
                    }
                }
            }

            // Powerups (fall & collect)
            for (let i = powerups.length - 1; i >= 0; i--) {
                const pu = powerups[i];
                pu.y += pu.vy;
                if (pu.y > canvas.height - paddle.h && pu.x > paddle.x && pu.x < paddle.x + paddle.w) {
                    powerups.splice(i, 1);
                    switch(pu.type) {
                        case 0: // Multi-ball
                            balls.push({ x: paddle.x + paddle.w/2, y: canvas.height - 50, vx: (Math.random()-0.5)*8, vy: -6, r: 10 });
                            break;
                        case 1: // Big paddle
                            paddle.w = Math.min(200, paddle.w * 1.5);
                            setTimeout(() => paddle.w /= 1.5, 8000);
                            break;
                        case 2: // Fast balls
                            balls.forEach(b => { b.vx *= 1.2; b.vy *= 1.2; });
                            break;
                    }
                } else if (pu.y > canvas.height) {
                    powerups.splice(i, 1);
                }
            }

            // Level complete
            const aliveBricks = bricks.filter(b => b.alive).length;
            if (aliveBricks === 0) {
                level++;
                initLevel();
                balls.forEach(b => { b.vx *= 1.05; b.vy *= 1.05; });
            }

            frame++;
        }

        function draw() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);

            // BG gradient black
            const grad = ctx.createLinearGradient(0, 0, 0, canvas.height);
            grad.addColorStop(0, 'rgba(0,0,0,1)');
            grad.addColorStop(1, 'rgba(26,26,26,1)');
            ctx.fillStyle = grad;
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            // Bricks (FUD Chains - dark red with pink glow)
            bricks.forEach(brick => {
                if (brick.alive) {
                    ctx.fillStyle = '#8B0000';
                    ctx.shadowColor = var(--accent);
                    ctx.shadowBlur = 12;
                    ctx.fillRect(brick.x, brick.y, brick.w, brick.h);
                    ctx.shadowBlur = 0;
                    ctx.strokeStyle = '#FF4444';
                    ctx.lineWidth = 2;
                    ctx.strokeRect(brick.x, brick.y, brick.w, brick.h);
                }
            });

            // Balls (Gold $YEAH)
            balls.forEach(ball => {
                ctx.fillStyle = var(--gold);
                ctx.shadowColor = var(--gold);
                ctx.shadowBlur = 20;
                ctx.beginPath();
                ctx.arc(ball.x, ball.y, ball.r, 0, Math.PI*2);
                ctx.fill();
                ctx.shadowBlur = 0;
                // $Y text
                ctx.fillStyle = 'black';
                ctx.font = 'bold 14px Orbitron';
                ctx.textAlign = 'center';
                ctx.textBaseline = 'middle';
                ctx.fillText('$Y', ball.x, ball.y);
            });

            // Paddle (Pink Accent Shield)
            ctx.fillStyle = var(--accent);
            ctx.shadowColor = var(--accent);
            ctx.shadowBlur = 15;
            ctx.fillRect(paddle.x, canvas.height - paddle.h - 10, paddle.w, paddle.h);
            ctx.shadowBlur = 0;
            // Glow edge
            ctx.strokeStyle = var(--accent-light);
            ctx.lineWidth = 3;
            ctx.strokeRect(paddle.x, canvas.height - paddle.h - 10, paddle.w, paddle.h);

            // Top UI
            ctx.fillStyle = 'rgba(0,0,0,0.6)';
            ctx.fillRect(0, 0, canvas.width, 50);
            ctx.fillStyle = var(--gold);
            ctx.font = 'bold 32px Orbitron';
            ctx.textAlign = 'center';
            ctx.fillText(score.toLocaleString(), canvas.width/2, 35);

            // Overlays
            const overlayText = {
                start: ['BREAKOUT $YEAH!', 'Mouse/Teclas/Touch', 'Â¡Shatter FUD Chains!'],
                win: ['LEVEL CLEAR!', `Shatters: ${score}`],
                gameover: ['FUD WINS!', `Final: ${score}`, `High: ${highscore}`, 'Click to Retry']
            };
            if (gameState !== 'play') {
                ctx.fillStyle = 'rgba(0,0,0,0.85)';
                ctx.fillRect(0, 0, canvas.width, canvas.height);
                ctx.textAlign = 'center';
                ctx.shadowColor = gameState === 'gameover' ? '#ff4444' : var(--gold);
                ctx.shadowBlur = 20;
                const texts = overlayText[gameState];
                ctx.font = 'bold 48px Orbitron';
                ctx.fillStyle = gameState === 'gameover' ? '#FF4444' : var(--accent);
                ctx.fillText(texts[0], canvas.width/2, canvas.height/2 - 40);
                ctx.shadowBlur = 0;
                ctx.font = 'bold 28px Orbitron';
                ctx.fillStyle = 'white';
                for (let i = 1; i < texts.length; i++) {
                    ctx.fillText(texts[i], canvas.width/2, canvas.height/2 + (i-1)*40);
                }
            }
            ctx.textAlign = 'left';
        }

        function gameLoop() {
            update();
            draw();
            requestAnimationFrame(gameLoop);
        }

        function startPlay() {
            if (['start', 'gameover'].includes(gameState)) {
                if (gameState === 'gameover') initGame();
                else gameState = 'play';
            }
        }

        function gameOver() {
            gameState = 'gameover';
            if (score > highscore) {
                highscore = score;
                localStorage.setItem('yeahBreakoutHS', highscore);
                confetti();
            }
            tweetBtn.style.display = 'inline-block';
            updateUI();
        }

        function updateUI() {
            ui.textContent = `Shatters: ${score.toLocaleString()} | Level: ${level} | Lives: ${lives} | High: ${highscore.toLocaleString()}`;
        }

        function confetti() {
            for (let i = 0; i < 120; i++) {
                const conf = document.createElement('div');
                const hue = Math.random() * 360;
                conf.style.cssText = `
                    position: fixed; left: ${Math.random()*100}vw; top: 100vh;
                    width: 10px; height: 10px; background: hsl(${hue},100%,60%);
                    pointer-events: none; animation: confetti-fall 3s linear forwards; z-index:9999;
                    border-radius: 50%; box-shadow: 0 0 10px hsl(${hue},100%,50%);
                `;
                document.body.appendChild(conf);
                setTimeout(() => conf.remove(), 3000);
            }
        }

        function tweetScore() {
            const text = encodeURIComponent(`Shattered ${highscore.toLocaleString()} FUD chains in Breakout $YEAH! Pure conviction ðŸ’ŽðŸ™Œ @Yeah_mindset #YEAH #BreakTheChains https://yeahmindset.vercel.app/Game.html`);
            window.open(`https://x.com/intent/tweet?text=${text}`, '_blank');
        }

        // Events
        canvas.addEventListener('click', startPlay);
        canvas.addEventListener('mousemove', e => {
            const rect = canvas.getBoundingClientRect();
            mouseX = (e.clientX - rect.left) * (canvas.width / rect.width);
        });
        canvas.addEventListener('touchmove', e => {
            e.preventDefault();
            const rect = canvas.getBoundingClientRect();
            const touch = e.touches[0];
            mouseX = (touch.clientX - rect.left) * (canvas.width / rect.width);
        }, { passive: false });
        document.addEventListener('keydown', e => {
            if (e.code === 'Space') {
                e.preventDefault();
                startPlay();
            } else if (gameState === 'play') {
                if (e.code === 'KeyA' || e.code === 'ArrowLeft') paddle.x = Math.max(0, paddle.x - paddle.speed);
                if (e.code === 'KeyD' || e.code === 'ArrowRight') paddle.x = Math.min(canvas.width - paddle.w, paddle.x + paddle.speed);
            }
        });
        tweetBtn.addEventListener('click', tweetScore);

        // Init
        initGame();
        updateUI();
        gameLoop();
    </script>
</body>
</html>